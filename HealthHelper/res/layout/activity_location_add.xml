<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.weather.LocationAddActivity$PlaceholderFragment" >

    <RelativeLayout
        android:id="@+id/rloLocationAdd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00BCD4">

        <TextView
            android:id="@+id/txtLocationAddTitle"
            android:text="添加城市"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#ffffff"         
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imgLocationAddReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/all_return" />

    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:padding="10dp">

        <EditText
            android:id="@+id/edtLocationAddSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/imgLocationAddGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/all_go" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@id/txtLocationAddTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#BDBDBD"
            android:text="热门城市" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

            <Button
                android:id="@+id/btnHotCity1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 北京市 "
                android:textColor="#BDBDBD"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/circle_corner_button_selector" />
            
            <Button
                android:id="@+id/btnHotCity2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 上海市 "
                android:textColor="#BDBDBD"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/circle_corner_button_selector" />
            
            <Button
                android:id="@+id/btnHotCity3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 东莞市 "
                android:textColor="#BDBDBD"
                android:layout_weight="1"
                android:background="@drawable/circle_corner_button_selector" />

        </LinearLayout>
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"  >

            <Button
                android:id="@+id/btnHotCity4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 深圳市 "
                android:textColor="#BDBDBD"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/circle_corner_button_selector" />
            
            <Button
                android:id="@+id/btnHotCity5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 天津市 "
                android:textColor="#BDBDBD"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/circle_corner_button_selector" />
            
            <Button
                android:id="@+id/btnHotCity6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 郑州市 "
                android:textColor="#BDBDBD"
                android:layout_weight="1"
                android:background="@drawable/circle_corner_button_selector" />

        </LinearLayout>
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"  >

            <Button
                android:id="@+id/btnHotCity7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 苏州市 "
                android:textColor="#BDBDBD"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/circle_corner_button_selector" />
            
            <Button
                android:id="@+id/btnHotCity8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 南京市 "
                android:textColor="#BDBDBD"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/circle_corner_button_selector" />
            
            <Button
                android:id="@+id/btnHotCity9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 武汉市 "
                android:textColor="#BDBDBD"
                android:layout_weight="1"
                android:background="@drawable/circle_corner_button_selector" />

        </LinearLayout>
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"  >

            <Button
                android:id="@+id/btnHotCity10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 成都市 "
                android:textColor="#BDBDBD"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/circle_corner_button_selector" />
            
            <Button
                android:id="@+id/btnHotCity11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 重庆市 "
                android:textColor="#BDBDBD"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/circle_corner_button_selector" />
            
            <Button
                android:id="@+id/btnHotCity12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 青岛市 "
                android:textColor="#BDBDBD"
                android:layout_weight="1"
                android:background="@drawable/circle_corner_button_selector" />

        </LinearLayout>
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"  >

            <Button
                android:id="@+id/btnHotCity13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 大理市 "
                android:textColor="#BDBDBD"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/circle_corner_button_selector" />
            
            <Button
                android:id="@+id/btnHotCity14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 丽江市 "
                android:textColor="#BDBDBD"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/circle_corner_button_selector" />
            
            <Button
                android:id="@+id/btnHotCity15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 沈阳市 "
                android:textColor="#BDBDBD"
                android:layout_weight="1"
                android:background="@drawable/circle_corner_button_selector" />

        </LinearLayout>
        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"  >

            <Button
                android:id="@+id/btnHotCity16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 广州市 "
                android:textColor="#BDBDBD"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/circle_corner_button_selector" />
            
            <Button
                android:id="@+id/btnHotCity17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 杭州市 "
                android:textColor="#BDBDBD"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/circle_corner_button_selector" />
            
            <Button
                android:id="@+id/btnHotCity18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 大连市 "
                android:textColor="#BDBDBD"
                android:layout_weight="1"
                android:background="@drawable/circle_corner_button_selector" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
