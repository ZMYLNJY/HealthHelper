<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lloLocationShow"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical" >
        
        <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/imgLocationShowWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/location_test" />

        <TextView
            android:id="@+id/txtLocationShowCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/imgLocationShowWeather"
            android:textSize="25px"
            android:text="测试城市" />

        <TextView
            android:id="@+id/txtLocationShowTemper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtLocationShowCity"
            android:layout_toRightOf="@+id/imgLocationShowWeather"
            android:layout_marginLeft="20dp"
            android:text="测试温度"
            android:textSize="20px" />

        <ImageView
            android:id="@+id/imgLocationShowDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/location_add_delete" />

    </RelativeLayout>
        
    </LinearLayout>

    

</LinearLayout>
