<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
       <RelativeLayout
        android:id="@+id/rloWeather"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00BCD4">

        <TextView
            android:id="@+id/txtFoodTitle"
            android:text="米饭"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"         
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imgReturnFoodlist"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/all_return" />
	</RelativeLayout>
	
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">
        <ImageView android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imgFooddetail"
            android:src="@drawable/ic_launcher"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="米饭"
            android:id="@+id/txtFooddetailname"
            android:layout_toRightOf="@id/imgFooddetail"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="116"
            android:textSize="20sp"
            android:id="@+id/txtFooddetailhit"
            android:layout_below="@id/txtFooddetailname"
            android:layout_toRightOf="@id/imgFooddetail"
            android:layout_marginLeft="20dp"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="千卡/100克"
            android:textSize="20sp"
            android:layout_toRightOf="@id/txtFooddetailhit"
            android:layout_below="@id/txtFooddetailname"/>
        
    </RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginTop="20dp"
	    android:gravity="center">
	    <Button android:layout_width="100dp" 
	        android:layout_height="wrap_content"
	        android:text="添加纪录"
	        android:id="@+id/btnAddRecord"
	        android:textSize="12sp"
	        android:textColor="#ffffff"
	 		android:background="@drawable/shape"
	 		android:gravity="center"/>
	    <Button  android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:text="加入对比"
	        android:id="@+id/btnAddCompare"
	        android:textColor="#ffffff"
	        android:textSize="12sp"
	 		android:background="@drawable/shape"
	 		android:layout_marginLeft="30dp"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_marginTop="20dp"
	    android:layout_marginLeft="10dp">
		<TextView android:layout_height="wrap_content"
		       android:layout_width="wrap_content"
		       android:text="营养元素/100g"
		       android:textSize="20sp"/>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center"
	        android:layout_marginTop="10dp">
	        <TextView android:layout_height="wrap_content"
	            android:layout_width="100dp"
	            android:text="脂肪"
	            android:textSize="20sp"/>
	        <TextView android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:text="100"
	            android:textSize="20sp"
	            android:id="@+id/txtFooddetailfat"
	            android:layout_marginLeft="30dp"/>
	        <TextView android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:text="kj"
	            android:textSize="20sp"
	            android:layout_marginLeft="30dp"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center"
	        android:layout_marginTop="10dp">
	        <TextView android:layout_height="wrap_content"
	            android:layout_width="100dp"
	            android:text="蛋白质"
	            android:textSize="20sp"/>
	        <TextView android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:text="100"
	            android:textSize="20sp"
	            android:id="@+id/txtFooddetailprotein"
	            android:layout_marginLeft="30dp"/>
	        <TextView android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:text="g"
	            android:textSize="20sp"
	            android:layout_marginLeft="30dp"/>
	    </LinearLayout>
	     <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center"
	        android:layout_marginTop="10dp">
	        <TextView android:layout_height="wrap_content"
	            android:layout_width="100dp"
	            android:text="碳水化合物"
	            android:textSize="20sp"/>
	        <TextView android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:text="100"
	            android:textSize="20sp"
	            android:id="@+id/txtFooddetailsugar"
	            android:layout_marginLeft="30dp"/>
	        <TextView android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:text="g"
	            android:textSize="20sp"
	            android:layout_marginLeft="30dp"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center"
	        android:layout_marginTop="10dp">
	        <TextView android:layout_height="wrap_content"
	            android:layout_width="100dp"
	            android:text="钙"
	            android:textSize="20sp"/>
	        <TextView android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:text="100"
	            android:textSize="20sp"
	            android:id="@+id/txtFooddetailcalcium"
	            android:layout_marginLeft="30dp"/>
	        <TextView android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:text="g"
	            android:textSize="20sp"
	            android:layout_marginLeft="30dp"/>
	    </LinearLayout>
	</LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView android:layout_height="wrap_content"
		       android:layout_width="wrap_content"
		       android:text="找食小助手"
		       android:textSize="20sp"/>
        <TextView android:layout_height="wrap_content"
		       android:layout_width="wrap_content"
		       android:text="hhhhh"
		       android:textSize="20sp"
		       android:layout_gravity="center"
		       android:id="@+id/txtFoodedetailtips"/>
        
    </LinearLayout>

</LinearLayout>
